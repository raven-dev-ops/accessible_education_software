{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "npm run start -- --hostname 0.0.0.0 --port 3000",
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/login",
        "http://localhost:3000/student?preview=1",
        "http://localhost:3000/teacher?preview=1",
        "http://localhost:3000/admin"
      ]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "budgetsFile": "lighthouse-budgets.json"
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouseci"
    }
  }
}
